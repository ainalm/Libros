                    <div class="face front">

                        <!-- Image-->
                        <div class="card-up" style=" background-image: url('https://mdbootstrap.com/img/Photos/Others/images/82.jpg') ">
                      
                           
                        </div>

                        <!--Avatar-->
                        <div class="avatar mx-auto white rad" >
                         {% if fotoPerfil %}
